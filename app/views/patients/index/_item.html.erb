<div class="col-lg-4 col-md-6 item-content">
  <div class="contact-box float-e-margins">
    <div class="row">
      <div class="col-xs-12 text-right hidden-sm hidden-md hidden-lg">
        <div class="dropdown pull-right">
          <button class="btn btn-primary btn-xs" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            Action
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li><%= link_to 'Review', patient_path(item) %></li>
            <li><a href="#">Suspend</a></li>
            <li><a href="#">Delete</a></li>
          </ul>
        </div>
      </div>
      <div class="clearfix"></div>

      <div class="col-sm-4">
        <div class="text-center">
          <%#= image_tag set_image_resource(item.government_issued_id_data, "90x120", ""), :style => "max-width: 100%;" %>
        </div>
      </div>

      <div class="col-sm-8">
        <div class="row">
          <div class="col-sm-8">
            <div class="row hidden-md hidden-sm hidden-lg">
              <div class="col-sm-12 text-center" style="margin: 15px 0px;">
                <div class="rateit" style="font-size: 16px;" data-rateit-mode="font" data-rateit-step="1" data-rateit-min="0" data-rateit-max="5" data-rateit-value="3" data-rateit-resetable="false" data-rateit-readonly="true"></div>
                <span>(4.8) 148 Reviews</span>
              </div>
            </div>
            <h4><strong><%= item.name %></strong></h4>
            <p style="min-height: 60px;">PT, MSc PT, BScKin<br/>Physiotherapist</p>
          </div>
          <div class="col-sm-4 text-right hidden-xs">
            <div class="dropdown">
              <button class="btn btn-primary btn-xs full-width" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                Action
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <li><%= link_to 'Review', patient_path(item) %></li>
                <li><a href="#">Suspend</a></li>
                <li><a href="#">Delete</a></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="row hidden-xs">
          <div class="col-sm-12">
            <div class="rateit" style="font-size: 16px;" data-rateit-mode="font" data-rateit-step="1" data-rateit-min="0" data-rateit-max="5" data-rateit-value="3" data-rateit-resetable="false" data-rateit-readonly="true"></div>
            <span style="vertical-align: top;">(4.8) 148 Reviews</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
