<% content_for :header do %>
  <div class="wrapper border-bottom white-bg header-wrapper" style="margin: 0px -15px; padding: 0px 25px 15px;">
    <div class="row">
      <div class="col-lg-12">
        <h2><%= link_to '', patients_path, :class => "fa fa-arrow-left back-to-button" %>Back To Patients</h2>
      </div>
    </div>
  </div>
<% end %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">

    <div class="col-sm-3 col-sm-offset-1">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div class="row">
            <div class="col-xs-12 m-b">
              <%= image_tag set_image_resource(@patient.government_issued_id_data), :style => "max-width: 100%;" %>
            </div>
            <div class="col-xs-12">
              <ul class="nav nav-pills nav-stacked" role="tablist">
                <li role="presentation" class="active"><a href="#personal-info" aria-controls="home" role="tab" data-toggle="tab">Personal Info</a></li>
                <li role="presentation"><a href="#address" aria-controls="profile" role="tab" data-toggle="tab">Address</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-7">
      <div class="ibox float-e-margins">
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="personal-info">
            <%= render 'patients/show/personal-info' %>
          </div>
          <div role="tabpanel" class="tab-pane" id="address">
            <%= render 'patients/show/address' %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
